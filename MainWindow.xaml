<Window x:Class="Elexus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helix="http://helix-toolkit.org/wpf" 
        Title="Elexus Modeling" Height="800" Width="1200" Background="#1E1E1E">
    <Grid>
        <TabControl>
            <TabItem Header="Modeling" Margin="0,-2,-4,0">
                <!-- Model Design Section -->
                <DockPanel>
                    <Button Content="Add Part" DockPanel.Dock="Top" Width="150" Click="AddPartButton_Click"/>
                    <Button Content="Save Model" DockPanel.Dock="Top" Width="150" Click="SaveModelButton_Click"/>

                    <!-- Helix 3D View -->
                    <helix:HelixViewport3D Name="HelixView" Background="#1E1E1E" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                        <!-- Perspective camera setup -->
                        <helix:HelixViewport3D.Camera>
                            <PerspectiveCamera Position="5,5,10" LookDirection="0,15,-10" UpDirection="0,1,0" FieldOfView="45" />
                        </helix:HelixViewport3D.Camera>
                        <!-- Lighting -->
                        <ModelVisual3D>
                            <ModelVisual3D.Content>
                                <AmbientLight Color="#404040"/>
                            </ModelVisual3D.Content>
                        </ModelVisual3D>
                        <ModelVisual3D>
                            <ModelVisual3D.Content>
                                <DirectionalLight Color="White" Direction="-1,-1,-1"/>
                            </ModelVisual3D.Content>
                        </ModelVisual3D>
                        <ModelVisual3D>
                            <ModelVisual3D.Content>
                                <PointLight Color="White" Position="5,5,5"/>
                            </ModelVisual3D.Content>
                        </ModelVisual3D>
                        <!-- GridLines -->
                        <helix:GridLinesVisual3D Width="90" Length="90" Thickness="0.01" MinorDistance="3" MajorDistance="6" Fill="#FF646464"/>
                        
                        
                    </helix:HelixViewport3D>
                </DockPanel>
            </TabItem>

            <!-- Additional Tabs like Programming, Simulation can go here -->
        </TabControl>
    </Grid>
</Window>
